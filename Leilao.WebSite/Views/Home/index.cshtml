@{
    ViewBag.Title = "Home do Sitema";
}

<div class="card-deck">
    <div class="card">
        <img src="~/images/reddead.jpg" class="card-img-top img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title">Red Dead - <text id="title_item_1"></text></h5>
            <p class="text-center"><button type="button" class="btn btn-primary" onclick="Teste(1)">Lance</button></p>
        </div>
        <div class="card-footer">
            <small class="text-muted" id="desc_item_1">Ultimo lance : </small>
        </div>
    </div>
    <div class="card w-50">
        <img src="~/images/callofduty.png" class="card-img-top img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title">Call Of Duty - <text id="title_item_2"></text></h5>
            <p class="text-center"><button type="button" class="btn btn-primary" onclick="Teste(2)">Lance</button></p>
        </div>
        <div class="card-footer">
            <small class="text-muted" id="desc_item_2">Ultimo lance : </small>
        </div>
    </div>
    <div class="card w-50">
        <img src="~/images/residentevil.jpg" class="card-img-top img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title">Resident Evil - <text id="title_item_3"></text></h5>
            <p class="text-center"><button type="button" class="btn btn-primary" onclick="Teste(3)">Lance</button></p>
        </div>
        <div class="card-footer">
            <small class="text-muted" id="desc_item_3">Ultimo lance : </small>
        </div>
    </div>
</div>

@section scripts {

    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!-- Javascript da pagina -->
    <script src="~/Scripts/leilao/leilao.js"></script>
}
